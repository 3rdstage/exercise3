{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["ES2017"],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "node_modules/ethers/types"],
    "types": ["node", "bn.js", "chai", "mocha", "chance", "k6", "ethers.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "cache", "artifacts"]
}