  "ignoreRegExpList": ["ipfs-url"],
  "overrides": [
    {
      // https://jshint.com/docs/options/
      "filename": ".jshintrc",
      "words": [
        "esversion", "forin", "latedef", "nofunc", "noarg", "nonew", "quotmark"]
    }
