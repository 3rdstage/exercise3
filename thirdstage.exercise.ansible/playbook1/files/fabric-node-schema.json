{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Fabric Node Config",
  "type": "object",
  "required": ["fabric"],
  "properties": {
    "fabric": {
      "description": "the design of Fabric network",
      "type": "object",
      "required": ["ver", "orgs"],
      "properties": {
        "ver": {
          "description": "the version of Hyperledger Fabric to use",
          "type": "string"
        },
        "orgs": {
          "descripton": "all the members(organizations) of the Fabric",
          "type": "array",
          "items": {
            "title": "Organization",
            "description": "a Fabric member(organization)",
            "required": ["name", "type", "ca"],
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "enum": ["orderer", "peer"],
                "default": "peer"
              },
              "domain": {
                "type": "string"
              },
              "ca": {
                "description": "CA Server configuration",
                "type": "object",
                "required": ["hostname", "common_name"],
                "properties": {
                  "hostname": {
                    "type": "string"
                  },
                  "common_name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}